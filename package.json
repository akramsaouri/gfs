{
  "name": "graf-it",
  "description": "Generate a mock GraphQL API without writing a single line of code.",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "lowdb": "^1.0.0",
